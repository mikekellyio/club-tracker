<div class="page-header">
  <%= link_to new_sub_section_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Sub section
  <% end %>
  <h1>Listing sub_sections</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Section</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @sub_sections) do |sub_section| %>
            <td><%= sub_section.name %></td>
            <td><%= sub_section.description %></td>
            <td><%= sub_section.section_id %></td>
            <td><%= link_to 'Show', sub_section %></td>
        <td><%= link_to 'Edit', edit_sub_section_path(sub_section) %></td>
        <td><%= link_to 'Destroy', sub_section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
