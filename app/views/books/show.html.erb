<div class="page-header">
  <%= link_to books_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_book_path(@book), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1><%= @book.name.to_s.titleize %></h1>
</div>

<% if @book.sections.present? %>
  <ul class="list-unstyled">
    <% @book.sections.each do |s| %>
      <li>
        <%= link_to s.name, section_path(s) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p class="text-muted">No sections have been added yet</p>
<% end %>
